{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "http://example.com/recipe.json",
    "type": "object",
    "properties": {
        "public": {
            "type": "boolean",
            "default": false
        },
        "name": {
            "type": "string",
            "minLength": 1
        },
        "description": {
            "type": "string"
        },
        "ingredients": {
            "type": "array",
            "minItems": 1,
            "items": {
                "type": "object",
                "properties": {
                    "name": {
                        "type": "string",
                        "minLength": 1
                    },
                    "count": {
                        "type": "string",
                        "minLength": 1,
                        "examples": [
                            "1",
                            "1/2",
                            "1/4",
                            "4"
                        ]
                    },
                    "unit": {
                        "type": "string",
                        "default": ""
                    }
                },
                "additionalProperties": false,
                "required": [
                    "name",
                    "count"
                ]
            }
        },
        "directions": {
            "type": "array",
            "minItems": 1,
            "items": {
                "type": "string",
                "minLength": 1
            }
        }
    },
    "additionalProperties": false,
    "required": [
        "public",
        "name",
        "ingredients",
        "directions"
    ]
}
